@model Arna_Project_Track.Models.Users
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #ffffff; /* pure white */
        font-family: 'Segoe UI', sans-serif;
    }
</style>

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 rounded-4 bg-white" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4 text-primary">Login</h3>

        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3 text-end">
                <a href="#" class="text-decoration-none small">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div class="text-center mt-3">
            <span class="text-muted">Don't have an account?</span>
            <a href="/Account/Register" class="text-decoration-none">Register</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
