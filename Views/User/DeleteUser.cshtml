@model Arna_Project_Track.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Confirmation</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this user?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@Model.FirstName</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@Model.LastName</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Password</dt>
                <dd class="col-sm-8">@Model.Password</dd>

                <dt class="col-sm-4">Role</dt>
                <dd class="col-sm-8">@Model.Role</dd>

                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Model.Department</dd>

                <dt class="col-sm-4">Joining Date</dt>
                <dd class="col-sm-8">@Model.JoiningDate</dd>

                <dt class="col-sm-4">Employee Role</dt>
                <dd class="col-sm-8">@Model.EmployeeRoleNavigation?.RoleName</dd>
            </dl>

            <form asp-action="DeleteUser" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="GetAllUsers" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
