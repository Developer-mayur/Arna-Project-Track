<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arna_Project_Track</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Arna_Project_Track.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .list-group-item.active {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
            color: #fff !important;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end" id="sidebar-wrapper" style="width: 250px; min-height: 100vh;">
            <div class="sidebar-heading text-center py-4">
                <span class="badge rounded-pill bg-secondary fs-5">Logo</span>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]!.ToString() == "Index" ? "active" : "")"
                   asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>

                <a class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]!.ToString() == "Privacy" ? "active" : "")"
                   asp-area="" asp-controller="Home" asp-action="Privacy">🔒 About</a>

                <a class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]!.ToString() == "AddProject" ? "active" : "")"
                   asp-area="" asp-controller="Project" asp-action="AddProject">➕ Add Project</a>

                <a class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]!.ToString() == "ProjectView" ? "active" : "")"
                   asp-area="" asp-controller="Project" asp-action="ProjectView">📋 View Projects</a>

                <a class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"]!.ToString() == "ProjectGetById" ? "active" : "")"
                   asp-area="" asp-controller="Project" asp-action="ProjectGetById">🔍 Search Project</a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-light bg-white border-bottom px-4">
                <div class="container-fluid justify-content-end">
                    @if (Context.Session.GetString("UserEmail") != null)
                    {
                        <!-- Show Logout Button -->
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-primary rounded-pill px-4 fw-semibold">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Show Login Button -->
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary rounded-pill px-4 fw-semibold">
                            Login
                        </a>
                    }
                </div>

            </nav>

            <main class="container py-4">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted py-3 bg-light">
                <div class="container text-center">
                    &copy; 2025 - Arna_Project_Track - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
