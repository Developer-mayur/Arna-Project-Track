@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper HtmlHelper
@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Arna_Project_Track</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Arna_Project_Track.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end" id="sidebar-wrapper" style="width: 250px; min-height: 100vh;">
            <div class="sidebar-heading text-center py-4">
                <span class="badge rounded-pill bg-secondary">Logo</span>
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action @(currentController == "Home" && currentAction == "Index" ? "active text-white bg-primary" : "")"
                   asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                <a class="list-group-item list-group-item-action @(currentController == "Home" && currentAction == "About" ? "active text-white bg-primary" : "")"
                   asp-area="" asp-controller="Home" asp-action="About">About</a>

                <a class="list-group-item list-group-item-action @(currentController == "User" && currentAction == "AddUser" ? "active text-white bg-primary" : "")"
                   asp-area="" asp-controller="User" asp-action="AddUser">Add Employee</a>

                <a class="list-group-item list-group-item-action @(currentController == "User" && currentAction == "GetAllUsers" ? "active text-white bg-primary" : "")"
                   asp-area="" asp-controller="User" asp-action="GetAllUsers">All Users</a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-light bg-white border-bottom">
                <div class="container-fluid justify-content-end">
                    @if (Context.Session.GetString("UserEmail") != null)
                    {
                        <!-- Show Logout Button -->
                        <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger rounded-pill px-4 fw-semibold">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Show Login Button -->
                        <a asp-controller="Login" asp-action="Login" class="btn btn-outline-primary rounded-pill px-4 fw-semibold">
                            Login
                        </a>
                    }
                </div>
            </nav>
            <main class="container py-4">
                 @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="tempAlert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <script>
            setTimeout(function () {
                var alert = document.getElementById('tempAlert');
                if (alert) {
                    alert.classList.remove('show');
                    alert.classList.add('hide');
                }
            }, 3000);
        </script>
    }
                @RenderBody()
            </main>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2025 - Arna_Project_Track - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

