@model List<Project>

@{
    var nameSearch = Context.Request.Query["name"].ToString();
    var statusSearch = Context.Request.Query["status"].ToString();
}

<style>
    .container {
        max-width: 1000px;
        margin: 30px auto;
        padding: 20px;
        background: #f4f4f4;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .top-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .search-bar {
        display: flex;
        gap: 10px;
    }

        .search-bar input[type="text"] {
            padding: 8px;
            font-size: 16px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .search-bar button,
        .btn-back {
            padding: 8px 16px;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

            .search-bar button[type="submit"] {
                background-color: #007bff;
                color: white;
            }

                .search-bar button[type="submit"]:hover {
                    background-color: #0056b3;
                }

        .search-bar a.btn-clear {
            background-color: #6c757d;
            color: white;
            text-decoration: none;
            display: inline-block;
        }

            .search-bar a.btn-clear:hover {
                background-color: #5a6268;
            }

    .btn-back {
        background-color: #28a745;
        color: white;
        text-decoration: none;
    }

        .btn-back:hover {
            background-color: #218838;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
    }

        table thead {
            background-color: #007bff;
            color: white;
        }

        table th, table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .no-projects {
        font-style: italic;
        color: #999;
    }
</style>

<div class="container">
    <div class="top-actions">
        <h2>📋 All Projects</h2>
        <a href="/Home/Index" class="btn-back">⬅ Back</a> <!-- Replace with your actual back URL -->
    </div>

    <!-- Search Form -->
   

    <form method="get" asp-action="ViewAllProjects" class="search-bar" style="display: flex; gap: 10px; margin-bottom: 20px;">
        <input type="text" name="name" placeholder="Search by Project Name" value="@nameSearch" />
        <input type="text" name="status" placeholder="Search by Status" value="@statusSearch" />
        <button type="submit">Search</button>

        @if (!string.IsNullOrEmpty(nameSearch) || !string.IsNullOrEmpty(statusSearch))
        {
            <a href="/Project/ViewAllProjects" class="btn-clear" style="background: #6c757d; color: white; padding: 8px 12px; text-decoration: none; border-radius: 5px;">Clear</a>
        }
    </form>

    <!-- Project List -->
    @if (Model != null && Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Priority</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.Description</td>
                        <td>@project.StartDate.ToShortDateString()</td>
                        <td>@project.EndDate.ToShortDateString()</td>
                        <td>@project.Status</td>
                        <td>@project.Priority</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-projects">No projects found.</p>
    }
</div>
